# Description
#   hubot scripts for diagnosing hubot
#
# Commands:
#   hubot ping - Te replica con un "Pong", alguien penso que seria util
#   hubot adaptador - Responde el adaptador que utilizas
#   hubot echo <texto> - Responde de vuelta el <texto>
#   hubot hora - ReSponde la hora actual
#
# Author:
#   Josh Nichols <technicalpickles@github.com>

module.exports = (robot) ->
  robot.respond /PING$/i, (msg) ->
    msg.send "PONG"

  robot.respond /ADAPTADOR$/i, (msg) ->
    msg.send robot.adapterName

  robot.respond /ECHO (.*)$/i, (msg) ->
    msg.send msg.match[1]

  robot.respond /HORA/i, (msg) ->
    msg.send "La hora es: #{new Date()}"
